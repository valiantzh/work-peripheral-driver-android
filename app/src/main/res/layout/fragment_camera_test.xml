<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <Button
            android:enabled="false"
            android:id="@+id/button_capture"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="0dp"
            android:text="拍摄" />


        <Button
            android:enabled="false"
            android:id="@+id/button_record"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/button_capture"
            android:layout_margin="0dp"
            android:text="录像" />

        <Button
            android:enabled="false"
            android:id="@+id/button_stop_record"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/button_record"
            android:layout_margin="0dp"
            android:text="停止" />

        <Button
            android:enabled="false"
            android:id="@+id/open_folder"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/button_stop_record"
            android:layout_margin="0dp"
            android:text="打开文件夹" />




        <Button
            android:id="@+id/open_camera"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/open_folder"
            android:layout_margin="0dp"
            android:text="打开摄像头" />

        <Button
            android:id="@+id/rotate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/open_camera"
            android:layout_margin="0dp"
            android:text="旋转" />


    </RelativeLayout>
</RelativeLayout>