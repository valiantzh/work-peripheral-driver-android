<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.dcdz.drivers.demo.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/solid_gray"
        android:gravity="center"
        android:text="智能柜系列"
        android:textColor="@color/white"
        android:textSize="@dimen/title_sub_size" />

<!--    <Button
        android:id="@+id/btn_return"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="〈 返回"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />-->

    <RadioGroup
        android:id="@+id/rg_elocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/group_background"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/fl_container_elocker"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/rb_desk_control"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_radio_config"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="箱门控制"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_container_elocker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/frame_background"
        android:padding="@dimen/context_horizontal_padding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
